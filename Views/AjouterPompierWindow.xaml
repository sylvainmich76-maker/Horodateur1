<Window x:Class="Horodateur.Views.AjouterPompierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un pompier" 
        Height="400" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,2,0,10"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="Nom:"/>
            <TextBox x:Name="TextBoxNom"/>

            <Label Content="Prénom:"/>
            <TextBox x:Name="TextBoxPrenom"/>

            <Label Content="Grade:"/>
            <ComboBox x:Name="ComboGrade" 
                      SelectedIndex="0"
                      Height="30"
                      FontSize="14"
                      Margin="0,2,0,10">
                <ComboBoxItem Content="Pompier"/>
                <ComboBoxItem Content="Sergent"/>
                <ComboBoxItem Content="Lieutenant"/>
                <ComboBoxItem Content="Capitaine"/>
                <ComboBoxItem Content="Commandant"/>
                <ComboBoxItem Content="Chef de Corps"/>
            </ComboBox>

            <Label Content="Email (optionnel):"/>
            <TextBox x:Name="TextBoxEmail"/>

            <TextBlock Text="Le pompier sera ajouté à la liste et pourra être sélectionné pour les interventions."
                       FontStyle="Italic"
                       Foreground="Gray"
                       Margin="0,15,0,0"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="✖️ Annuler" 
                    Click="BtnAnnuler_Click"
                    Background="#F5F5F5"
                    BorderBrush="#CCCCCC"/>

            <Button Content="💾 Ajouter" 
                    Click="BtnAjouter_Click"
                    Background="#4CAF50"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>